<?xml version="1.0"?>
<block>
  <name>BSC_Byte</name>
  <key>ITpp_BSC_Byte</key>
  <category>[ITpp]</category>
  <import>import ITpp</import>
  <make>ITpp.BSC_Byte($bits, $probability)</make>
  <param>
    <name>Probabilidade Bit Erro</name>
    <key>probability</key>
    <type>float</type>
  </param>

  <param>
    <name>Qtd. bits da entrada</name>
    <key>bits</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
